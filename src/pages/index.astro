---
// index.astro
// This is the main page file that uses the layout and embeds content
// Detects browser language and loads the correct welcome component

import Layout from "../layouts/Layout.astro";
import WelcomeEN from "../components/WelcomeEN.astro";
import WelcomeDE from "../components/WelcomeDE.astro";

const requestLang = Astro.request.headers.get("accept-language") || "";
const isGerman = requestLang.toLowerCase().startsWith("de");
---

<!-- Using the Layout and injecting a title -->
<Layout title="Lu & Sebastian">
  <!-- Here starts the main content area -->
  <!-- Load German or English content based on browser language -->
  {isGerman ? <WelcomeDE /> : <WelcomeEN />}
</Layout>
