---
// Layout.astro
// This layout wraps around all pages that use it

const { title = "Wedding Announcement" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <!-- Change title here -->

    <!-- Here starts CSS layout: set your global styles -->
    <style>
      :root {
        --mint-green: #98ff98;
        --light-grey: #b1b1b1;
        font-family: sans-serif;
      }

      body {
        margin: 0;
        padding: 0;
        background-color: var(--light-grey);
        color: #333;
      }

      header {
        display: flex;
        justify-content: flex-end;
        padding: 1rem;
        background-color: var(--mint-green);
      }

      .lang-switch a {
        margin-left: 1rem;
        text-decoration: none;
        font-weight: bold;
        color: #333;
      }

      main {
        padding: 1rem;
      }
    </style>
  </head>
  <body>
    <!-- ðŸ“¦ This is where page-specific content will go -->

    <!-- ðŸŒ Language switch links -->
    <header>
      <nav class="lang-switch">
        <a href="/en">English</a>
        <a href="/de">Deutsch</a>
      </nav>
    </header>
    <main>
      <slot />
    </main>
  </body>
</html>
