---
// Layout.astro
// This layout wraps around all pages that use it

const { title = "Wedding Announcement" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <!-- Change title here -->

    <!-- Here starts CSS layout: set your global styles -->
    <style>
      :root {
        --mint-green: #98ff98;
        --light-grey: #b1b1b1;
        font-family: sans-serif;
      }

      body {
        margin: 0;
        padding: 0;
        background-color: var(--light-grey);
        color: #333;
      }

      main {
        padding: 1rem;
      }
    </style>
  </head>
  <body>
    <!-- ðŸ“¦ This is where page-specific content will go -->
    <main>
      <slot />
    </main>
  </body>
</html>
